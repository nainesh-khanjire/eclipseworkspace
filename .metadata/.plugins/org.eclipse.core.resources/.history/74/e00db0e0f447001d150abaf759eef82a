import java.util.Scanner;

public class BankMain {

	// Assignment 3, Write java program to implement Inheritance

	int acnumber;
	float totalbal;

	BankMain() {

	}

	void deposit() {

		Scanner sc = new Scanner(System.in);
		System.out.println("Enter account number: ");
		acnumber = sc.nextInt();

		System.out.println("Enter deposit amount: ");
		totalbal = sc.nextFloat();
		getBalance();

	}

	void withdraw() {

		int amount = 0;
		Scanner sc = new Scanner(System.in);

		System.out.println("Enter amount to withdraw: ");
		amount = sc.nextInt();

		if (totalbal >= 1000) {
			totalbal = totalbal - amount;
		} else
			System.out.println("unable to withdraw, your account balance is low!");
		getBalance();
	}

	void getBalance() {

		System.out.println("your balance is: " + totalbal);
	}
}

class CheckingAcc extends BankMain {

	void deductFee() {

		Scanner sc = new Scanner(System.in);
		int fee = sc.nextInt();
		System.out.println("Enter amount to withdraw: ");
		if (totalbal >= 500) {

			totalbal = totalbal - fee;
			
		} else
			System.out.println("Acccount balance low!");
		getBalance();
	}
}

class SavingAcc extends BankMain {
	float interestRate = 10F;

	void addInterest() {

		totalbal = totalbal * (totalbal * interestRate / 100);
		

		System.out.println("Saving account balance with interest is : "+totalbal);	
	}
	
}